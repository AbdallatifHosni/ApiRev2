<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
</head>
<body>
    <div style="width:100%;background-color:yellow;height:30%">
        <h1>
            Header nav 
            @RenderSection("HEaderAdd",false)
        </h1>
    </div>
    <div style="width:100%;display:flex;height:50%">
        <div style="width:30%;background-color:yellowgreen;">
            <h1>Menu
                @RenderSection("MEnuAdd",true)
            </h1>
        </div>
        <div style="width:60%;background-color:red;">
           <!--content View calling -->
            @RenderBody()      
        </div>
    </div>
    <div style="width:100%;background-color:lightyellow;height:20%">
        <h1>
            Footer @RenderSection("FooterAdd")
        </h1>
    </div>
  
</body>
</html>
