@model List<Department>
@{
    Layout = "_Layout2";
}
<!--Strong Type View-->
<!-- List<Department> -->
<!--RenderBody-->
<table class="table table-bordered table-hover" width="50%">
    <tr>
        <th>
            Department Name
        </th>
        <th>
            Manager Name
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.ManagerName</td>
            <td>
                
               <input type="button" onclick="AjaxCall(@item.Id)" value="Show" class="btn btn-success"/>
            </td>
        </tr>
    }
</table>



<a href="\Dept\Add" class="btn btn-alert-success">Add New DEpartment</a>